<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_launcher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_splash_root"
    tools:context=".Activity.SplashActivity">

    <TextView
        android:id="@+id/tv_splash_version_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:textColor="#fff"
        android:text="Copyright Â© 2020 SaiDicaprio."/>
    <TextView
        android:id="@+id/tv_splash_version_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:textColor="#fff"
        android:text="v1.0.0 alpha"/>
</RelativeLayout>